@model List<WebReposicion.Models.ViewModels.StockViewModel>

@{
    ViewBag.Title = "SISTEMA DE GESTIÓN DE STOCK";
}

<h2 style="text-align:center">@ViewBag.Title</h2>


@using (Html.BeginForm("Index", "Stock", FormMethod.Post))
{
    <div class="panel panel-default">
        <div class="panel panel-heading" style="background-color:#3c8dbc">
            <b style="color:aliceblue">  <span class="glyphicon glyphicon-search"> </span>  CONSULTA DE STOCK DE ARTÍCULOS</b>
        </div>
        <div class="panel-body">
            <div>@Html.TextBox("cadena", "", new { @class = "form-control" })</div>

            @*<div>
                    <input type="text" class="form-control" name="Cadena" placeholder="Ingrese nombre del cliente" required autofocus>
                </div>*@

            <br>
            <div style="text-align:right">
                <button type="submit" class="btn btn-success">Buscar</button>
            </div>
            @*<button id="btnTodo" type="submit" class="btn btn-default" >Cargar todo</button>*@
        </div>
    </div>
}


<div class="panel panel-default">
    <div class="panel panel-heading" style="background-color:#3c8dbc">
        <b style="color:aliceblue">   <span class="glyphicon glyphicon-blackboard"> </span>  RESULTADO DE BÚSQUEDA</b>
    </div>
    <div class="panel-body">


        @foreach (var oElement in Model)
        {
            <div class="panel panel-default">
                <div class="panel panel-heading" style="background-color:#3c8dbc">
                    <b style="color:aliceblue">Información del artículo</b>
                    <div class="panel-body">
                        <table class="table" style="background-color:#ecf0f5">

                            <tr>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th>   CÓDIGO: @oElement.Codigo</th>

                            </tr>

                            <tr>
                                <td colspan="3"> <p>DESCRIPCIÓN:  @oElement.Nombre</p></td>
                                <td rowspan="4" colspan="1"> <IMG SRC="~/Content/Img/@oElement.Ruta" style="max-width:100%;width:350px;height:350px;"></td>

                            </tr>
                            <tr>
                                <td colspan="3"> <p>CATEGORÍA:  @oElement.Categoria</p></td>

                            </tr>
                            <tr>
                                <td colspan="3"> <p>CLASIFICACIÓN:  @oElement.ABC@oElement.XYZ</p></td>

                            </tr>
                            <tr>
                                <td colspan="3"> <p>STOCK: @oElement.Stock  COMPROMETIDO: @oElement.Comprometido  DISPONIBLE: @oElement.Disponible</p>  </td>

                            </tr>

                            <tr>
                                <td colspan="3"> <p>STOCK PREDICTIVO: 0  STOCK MÍNIMO: 0 STOCK MÁXIMO: 0</p>  </td>

                            </tr>

                            <tr>
                                <td colspan="3"> <p>PRIORIDAD DE REPOSICIÓN: @oElement.PrioridadReposicion</p>  </td>

                            </tr>

                           


                        </table>
                    </div>


                </div>
            </div>

        }





    </div>

</div>